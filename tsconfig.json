{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    "module": "ESNext",
    "moduleResolution": "Node",

    "resolveJsonModule": true,

    "strict": true,
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true
  },

  "include": ["src"]
}
